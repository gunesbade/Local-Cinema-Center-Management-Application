<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>

<!--
 * AnchorPane layout for the Admin Dashboard screen.
 * Displays a welcome message for the admin user.
 -->
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cinemaapp.AdminDashboardController">
    <children>

        <!--
         * Username Label
         * Displays a welcome message for the admin user.
         * Text can be dynamically updated via the controller.
         * ID: usernameLabel
         -->
        <Label fx:id="usernameLabel" layoutX="20" layoutY="20" text="Welcome, Admin!" />

    </children>
</AnchorPane>
